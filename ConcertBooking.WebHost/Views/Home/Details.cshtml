@model ConcertBooking.WebHost.ViewModels.HomePageViewModels.HomeConcertDetailsViewModel


<div class="row m-3">
    <div class="col-6">
        <img src="@Model.ConcertImage" alt="Concert Image"  width="500px"/>
    </div>
    <div class="col-6">
        <div>Concert Id : @Model.ConcertId</div>
        <div>Concert Name : @Model.ConcertName</div>
        <div>Concert Description : @Model.ConcertDescription</div>
        <div>Venue Name : @Model.VenueName</div>
        <div>Venue Address : @Model.VenueAddress</div>
        <div>Venue Date & Time : @Model.ConcertDateTime.ToString("MMM dd yyyy hh:mm")</div>
        <div class="mt-2"><img src="@Model.ArtistImage" class="roundedrounded-circle img-fluid" style="height:150px;width:150px" /></div>
        <div>Artist Name : @Model.ArtistName</div>
        <div class="mt-3">
            <a class="btn btn-success mt-3">See Available Tickets</a>
        </div>

    </div>
        
</div>




<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
