@model List<HomeConcertViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-2">
    @foreach (var item in Model)
    {
        <div class="col-3 m-2">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@item.ConcertImage" style="height:235px" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.ConcertName</h5>
                    <h5 class="card-title">@item.ArtistName</h5>
                    <p class="card-text">@item.ConcertDescription</p>
                    <a asp-action="Details" asp-route-id="@item.ConcertId" class="btn btn-primary">Book now</a>
                </div>
            </div>
        </div>
    }
</div>
